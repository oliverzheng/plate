{
  "name": "plate",
  "version": "0.0.1-snapshot",
  "description": "A todo app with Dropbox Paper-like editing experience",
  "author": {
    "name": "Oliver Zheng",
    "email": "plate@oliverzheng.com"
  },
  "build": {
    "appId": "com.oliverzheng.plate",
    "productName": "Plate",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "generateUpdatesFilesForAllChannels": true
  },
  "private": true,
  "dependencies": {
    "electron-debug": "^3.0.1",
    "electron-log": "^3.0.8",
    "immutable": "^4.0.0-rc.12",
    "invariant": "^2.2.4",
    "is-hotkey": "^0.1.6",
    "mkdirp": "^0.5.1",
    "nullthrows": "^1.1.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "slate": "^0.47.8",
    "slate-hotkeys": "^0.2.9",
    "slate-react": "^0.22.8",
    "source-map-support": "^0.5.15"
  },
  "scripts": {
    "flow": "flow",
    "lint": "eslint 'src/**/*.js' --cache --max-warnings=0",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-eslint --prettier-last --write",
      "eslint --cache --max-warnings=0",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "electron": "^6.0.9",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-webpack": "^2.7.4",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "flow-bin": "^0.107.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "prettier-eslint-cli": "^5.0.0",
    "webpack": "^4.41.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "flow && lint-staged"
    }
  }
}
